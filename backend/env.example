# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database
MONGODB_URI=mongodb://localhost:27017/your-database-name
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/your-database-name

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:3000

# Optional: Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Optional: File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Session Configuration
SESSION_SECRET=your-session-secret-here
COOKIE_MAX_AGE=86400000

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Optional: Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000

# Optional: Performance
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Optional: External Services
EXTERNAL_API_URL=https://your-external-api.com
EXTERNAL_API_KEY=your-external-api-key

# GoIP Gateway Configuration (for SIM card management)
GOIP_GATEWAY_HOST=188.126.10.151
GOIP_GATEWAY_PORT=4064
GOIP_GATEWAY_USERNAME=root
GOIP_GATEWAY_PASSWORD=Greedisgood10!
SERVER_URL=http://your-server-url.com

# Blockchain Scraper Configuration
# Etherscan API key for Ethereum blockchain scraping
ETHERSCAN_API_KEY=your-etherscan-api-key

# Blockchain Scraper Scheduling
# Enable/disable automatic blockchain scraping (default: true)
BLOCKCHAIN_AUTO_SCRAPE_ENABLED=true

# Cron schedule for blockchain scraping (default: 0 3 * * * = daily at 3:00 AM UTC)
# Format: minute hour day month weekday
# Examples:
#   0 3 * * *     = Daily at 3:00 AM UTC
#   0 */6 * * *   = Every 6 hours
#   0 0 * * 0     = Weekly on Sunday at midnight
BLOCKCHAIN_SCRAPER_CRON_SCHEDULE=0 3 * * *

# Run blockchain scraper on server startup (default: true)
# Set to false to disable initial scrape on startup
BLOCKCHAIN_SCRAPE_ON_STARTUP=true

# Agent Scraper Configuration (for agent performance data)
SCRAPER_API_URL=https://agent-report-mfl3.onrender.com/api
SCRAPER_USERNAME=your-scraper-username
SCRAPER_PASSWORD=your-scraper-password
SCRAPER_CRON_SCHEDULE=0 2 * * *

# AWS S3 Configuration (for verification videos)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=eu-west-2
S3_BUCKET_NAME=creditopro-verification-sessions-2025